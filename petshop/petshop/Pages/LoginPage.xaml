<Page x:Class="petshop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:petshop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Товары для животных - Регистрация">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Login:"></Label>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="Password:"></Label>
            <PasswordBox x:Name="PasswordBox"></PasswordBox>
            <Button Content="Войти" x:Name="LoginButton" Click="LoginButton_Click" Margin="0,5,0,0" ></Button>
            <Button Content="Гость"  x:Name="GuestButton" Click="GuestButton_Click" Margin="0,5,0,0"></Button>
        </StackPanel>
    </Grid>
</Page>
